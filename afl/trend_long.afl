#include <z_score.afl>
#include <volatility_filter.afl>

lookback = Optimize("lb",2,2,10,10);

up_today = ROC(C,1) > 0 
	&& ROC(O,1) > 0 
	&& ROC(H,1) > 0 
	&& ROC(L,1) > 0; 

up_trend = C >= MA(C,lookback);

Buy =   volume_filter && 
  up_today && 
  up_trend;
  
Short = Cover = Sell = False;
